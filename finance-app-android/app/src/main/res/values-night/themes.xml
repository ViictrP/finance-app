<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FinanceApp" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="Theme.FinanceApp.Splash" parent="Theme.SplashScreen">
        <!-- Customize your background -->
        <item name="windowSplashScreenBackground">@color/background</item>

        <!-- Your static app logo (shown immediately) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Icon animation duration -->
        <item name="windowSplashScreenAnimationDuration">500</item>

        <!-- Optional: stays visible for this duration even if loading finishes -->
        <item name="postSplashScreenTheme">@style/Theme.FinanceApp</item>
    </style>
</resources>